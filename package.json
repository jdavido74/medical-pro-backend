{
  "name": "medical-pro-backend",
  "version": "1.0.0",
  "description": "MedicalPro Backend API - SaaS de gestion médicale pour praticiens et établissements de santé",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "db:reset": "npm run migrate && npm run seed"
  },
  "keywords": [
    "medical",
    "healthcare",
    "saas",
    "api",
    "nodejs",
    "postgresql",
    "dossier-medical",
    "rendez-vous"
  ],
  "author": "MedicalPro Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rate-limiter-flexible": "^2.4.2",
    "sequelize": "^6.35.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
